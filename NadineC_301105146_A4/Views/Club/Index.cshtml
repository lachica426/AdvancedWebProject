@model IEnumerable<Club>
@{
    ViewBag.Title = "Maple Soccer League";
}

    <div class="col-md-12">
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success">@TempData["message"]</div>
        }
        <h4>Clubs</h4>
        <div>
            <p>Shows list of soccer clubs</p>
        </div>

        <div class="table-responsive-sm">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Club</th>
                        <th>Description</th>
                        
                    </tr>
                </thead>

                <tbody>
                    @foreach (Club c in Model)
                    {
                    <tr>
                        <td><a asp-action="ClubDetails" asp-route-clubID="@c.ClubID" >@c.ClubName</a></td>
                        <td>@c.Description</td>
                   </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

