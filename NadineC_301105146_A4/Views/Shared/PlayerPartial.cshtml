@model PlayerClubViewModel

<div class="form-group">
    <label asp-for="Players.FirstName">First Name:</label>
    <div><span asp-validation-for="Players.FirstName" class="text-danger"></span></div>
    <input asp-for="Players.FirstName" class="form-control" />
</div>

<div class="form-group">
    <label asp-for="Players.LastName">Last Name:</label>
    <div><span asp-validation-for="Players.LastName" class="text-danger"></span></div>
    <input asp-for="Players.LastName" class="form-control" />
</div>

<div class="form-group">
    <label asp-for="Players.Position">Position:</label>
    <div><span asp-validation-for="Players.Position" class="text-danger"></span></div>
    <input asp-for="Players.Position" class="form-control" />
</div>

<div class="form-group">
    <label asp-for="Players.Goals">Goals:</label>
    <div><span asp-validation-for="Players.Goals" class="text-danger"></span></div>
    <input asp-for="Players.Goals" class="form-control" />
</div>

<div class="form-group">
    <label asp-for="Players.ClubID">Club:</label>
    <div><span asp-validation-for="Players.ClubID" class="text-danger"></span></div>
    <select asp-for="Players.ClubID" asp-items="@Model.Clubs"></select>
</div>
