@model Event

@if (TempData["message"] != null)
{
    <div class="alert alert-success">@TempData["message"]</div>
}

<div class="form-group">
    <label asp-for="EventName">Event Name:</label>
    <div><span asp-validation-for="EventName" class="text-danger"></span></div>
    <input asp-for="EventName" class="form-control" />
</div>


<div class="form-group">
    <label asp-for="Description">Description:</label>
    <div><span asp-validation-for="Description" class="text-danger"></span></div>
    <textarea asp-for="Description" class="form-control"></textarea>
</div>

<div class="form-group">
    <label asp-for="EventDate">Date:</label>
    <div><span asp-validation-for="EventDate"class="text-danger"></span></div>
    <input asp-for="EventDate" type="datetime"  placeholder="yyyy-mm-dd" class="form-control">
</div>

<div class="form-group">
    <label asp-for="Venue">Venue:</label>
    <div><span asp-validation-for="Venue" class="text-danger"></span></div>
    <input asp-for="Venue" class="form-control" />
</div>


