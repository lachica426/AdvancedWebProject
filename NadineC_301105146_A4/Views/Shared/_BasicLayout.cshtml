@inject SignInManager<IdentityUser> SignInManager;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-4.4.1-dist/css/bootstrap.css" />
    <style>
        .input-validation-error {
            border-color: red;
            background-color: #fee;
        }
    </style>
</head>

<body>
    <div class="content">
        <header>

            <div class="header">
                <img src="~/images/Logo-Trans.png" />
            </div>

            <nav class="navbar-expand-sm navbar-toggleable-sm navbar-red bg-red border-bottom box-shadow mb-3">
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link-white" asp-action="Index" asp-controller="Home">HOME</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link-white" asp-action="Index" asp-controller="Club">CLUB</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link-white" asp-action="AddClub" asp-controller="Club">ADD CLUB</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link-white" asp-action="ClubDetailsDefault" asp-controller="Club">CLUB DETAILS</a>
                        </li>


                        <li class="nav-item">
                            <a class="nav-link-white" asp-action="Index" asp-controller="Player">MANAGE PLAYERS</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link-white" asp-action="TopPlayers" asp-controller="Player">STATISTICS</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link-white" asp-action="Index" asp-controller="Event">EVENT</a>
                        </li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a asp-action="Logout" asp-controller="Account" class="nav-link-white">LOGOUT</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a asp-action="Login" asp-controller="Account" class="nav-link-white">LOGIN</a>
                            </li>
                        }

                    </ul>
                </div>
            </nav>

        </header>

        <div class="container">
            <main class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="footer border-top mt-auto py-2">
            <div class="container">
                <span class="text-muted">&copy; 2020 - Maple Soccer League</span>
            </div>
        </footer>

    </div>
</body>
</html>
