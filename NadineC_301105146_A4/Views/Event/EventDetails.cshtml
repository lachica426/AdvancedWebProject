@model Event
@{
    ViewBag.Title = "Maple Soccer League";
}


<div class="bg-danger rounded text-center py-5 mb-4 my-2">
    <div class="container">
        <h1 class="font-weight-bold text-white">@Model.EventName</h1>
        <p class="overflow-hidden text-white">
            @Model.Description
        </p>
    </div>
</div>

<table class="table-responsive-sm float-right">
    <tr>
        <td>
            <form>
                <a asp-action="Edit" class="btn btn-sm btn-warning"
                   asp-route-eventID="@Model.EventID">
                    Edit
                </a>

                <a asp-action="Delete" class="btn btn-danger btn-sm"
                   asp-route-eventID="@Model.EventID">
                    Delete
                </a>
            </form>
        </td>
    </tr>
</table>
<br />


<div class="table-responsive-sm">
    <table class="table table-bordered">
        <tr>
            <th>Event Name</th>
            <td>@Model.EventName</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>@Model.Description</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>@Model.EventDate.Date.ToString("dd/MM/yyyy")</td>
        </tr>
        <tr>
            <th>Venue</th>
            <td>@Model.Venue</td>
        </tr>
    </table>
</div>

<br />
<div>
    <div>
        <p><h4>List of Guests</h4></p>
    </div>
</div>

<div class="table-responsive-sm">
    <table class="table table-bordered">

        <thead>
            <tr>
                <th>Guest Name</th>
                <th>Email Address</th>
                <th>Phone Number</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var guestList in Model.Responses)
            {
                <tr>
                    <td>@guestList.Name</td>
                    <td>@guestList.Email</td>
                    <td>@guestList.Phone</td>
                </tr>
            }
        </tbody>

    </table>
</div>



