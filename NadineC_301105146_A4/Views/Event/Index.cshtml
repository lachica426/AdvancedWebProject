@model IEnumerable<Event>
@{
    ViewBag.Title = "Maple Soccer League";
}

    <div class="col-md-12">
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success">@TempData["message"]</div>
        }
        <h4>Events</h4>

        <a asp-action="AddEvent" class="btn btn-danger float-right">Add new event</a>
        
        <div>
            <p>Shows list of events</p>
        </div>

        <div class="table-responsive-sm">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Event</th>
                        <th>Description</th>
                        <th>Date</th>
                        <th>Venue</th>
                        <th># of Guests</th>
                        <th>Register</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (Event e in Model)
                    {
                    <tr>
                        <td><a asp-action="EventDetails" asp-route-eventID="@e.EventID">@e.EventName</a></td>
                        <td>@e.Description</td>
                        <td>@e.EventDate.Date.ToString("dd/MM/yyyy")</td>
                        <td>@e.Venue</td>
                        <td>@e.Responses.Count</td>
                        <td class="text-center"><a asp-action="RsvpForm" asp-controller="Responses" asp-route-eventID="@e.EventID" class="btn btn-outline-danger">Register</a></td>
                    </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

