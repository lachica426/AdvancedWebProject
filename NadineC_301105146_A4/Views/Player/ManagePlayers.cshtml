@model IEnumerable<Player>
@inject SignInManager<IdentityUser> SignInManager;
@{
    ViewBag.Title = "Maple Soccer League";
}

<div class="col-md-12">
    @if (TempData["messagePlayer"] != null)
    {
        <div class="alert alert-success">@TempData["messagePlayer"]</div>
    }
    <h4>Manage Players</h4>

    <a asp-action="AddPlayer" class="btn btn-danger float-right">Add new member</a>
    <div>
        <p>Add, remove, and reassign a soccer club member</p>
    </div>

    <div class="table-responsive-sm">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Position</th>
                    <th>Goals</th>
                    <th>Club</th>
                    <th class="text-center">Edit</th>
                    <th class="text-center">Delete</th>
                </tr>
                   
            </thead>
            <tbody>
                @foreach (Player p in Model)
                {
                    <tr>
                        <td>@p.FirstName</td>
                        <td>@p.LastName</td>
                        <td>@p.Position</td>
                        <td>@p.Goals</td>
                        <td>@p.Clubs.ClubName</td>
                        <td class="text-center"><a asp-action="Edit" asp-route-playerID="@p.PlayerID" class="btn btn-outline-danger">Edit</a></td>
                        <td class="text-center"><a asp-action="Delete" asp-route-playerID="@p.PlayerID" class="btn btn-outline-danger">Delete</a></td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


